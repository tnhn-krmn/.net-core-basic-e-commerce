@model ProductListViewModel
<div class="container">
    @if (TempData["message"] != null)
    {
     <div class="alert alert-info" role="alert">@TempData["message"]</div>
    }
    <main role="main" class="pb-3 ">
        <div class="row">
            <div class="col-md-2">
            @await Component.InvokeAsync("CategoryList")
            </div>
            <div class="col-md-10">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Product Name</th>
                            <th scope="col">Unit Price</th>
                            <th scope="col">Unit In Stock</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>@product.ProductName</td>
                                <td>@product.UnitPrice</td>
                                <td>@product.UnitsInStock</td>
                                <td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Add To Cart</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <product-list-pager current-category="@Model.CurrentCategory"
                                    current-page="@Model.CurrentPage"
                                    page-count="@Model.PageCount"
                                    page-size="@Model.PageSize">
                </product-list-pager>
            </div>
        </div>
    </main>
</div>
